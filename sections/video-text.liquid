{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Media Banner Specific Styles */
  .media-banner {
    position: relative;
    width: 100%;
    height: {{ section.settings.section_height | default: 500 }}px;
    overflow: hidden;
    display: flex;
    align-items: {{ section.settings.content_vertical_alignment | default: 'center' }};
    justify-content: {{ section.settings.content_horizontal_alignment | default: 'center' }};
  }

  .media-banner__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .media-banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .media-banner__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    pointer-events: {{ section.settings.video_controls | default: 'none' }};
  }

  .media-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 | default: 0.3 }});
    z-index: 2;
  }

  .media-banner__content {
    position: relative;
    z-index: 2;
    text-align: {{ section.settings.text_alignment | default: 'center' }};
    color: {{ section.settings.text_color | default: '#ffffff' }};
    max-width: {{ section.settings.content_width | default: 800 }}px;
    padding: 0 20px;
    width: 100%;
  }

  .media-banner__content h2 {
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .media-banner__content p,
  .media-banner__content .rte {
    margin-bottom: 2rem;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    line-height: 1.6;
  }

  .media-banner__content .button {
    display: absolute;
    padding: 12px 30px;
    background: transparent;
    border: 2px solid {{ section.settings.button_border_color | default: '#ffffff' }};
    color: {{ section.settings.button_text_color | default: '#ffffff' }};
    text-decoration: none;
    border-radius: 25px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    text-shadow: none;
    min-width: 120px;
    text-align: center;
  }

  .media-banner__content .button:hover {
    background: {{ section.settings.button_border_color | default: '#ffffff' }};
    color: {{ section.settings.button_hover_text_color | default: '#000000' }};
    border-color: {{ section.settings.button_border_color | default: '#ffffff' }};
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
  }

  .media-banner__content .button--secondary {
    background: transparent;
    border: 2px solid {{ section.settings.button_border_color | default: '#ffffff' }};
    color: {{ section.settings.button_text_color | default: '#ffffff' }};
  }

  .media-banner__content .button--secondary:hover {
    background: {{ section.settings.button_border_color | default: '#ffffff' }};
    color: {{ section.settings.button_hover_text_color | default: '#000000' }};
  }

  @media screen and (max-width: 750px) {
    .media-banner {
      height: {{ section.settings.mobile_height | default: 400 }}px;
    }

    .media-banner__content {
      padding: 0 15px;
      max-width: 100%;
    }
  }

  /* Video iframe styles for YouTube/Vimeo */
  .media-banner__video-iframe {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100vw;
    height: 56.25vw; /* 16:9 aspect ratio */
    min-height: 100vh;
    min-width: 177.77vh; /* 16:9 aspect ratio */
    transform: translate(-50%, -50%);
    pointer-events: {{ section.settings.video_controls | default: 'none' }};
  }
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  assign video_id = section.settings.video.id | default: section.settings.video_url.id
-%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="media-banner">
    <!-- Media Background -->
    <div class="media-banner__media">
      {%- if section.settings.media_type == 'video' and section.settings.video != null -%}
        {{
          section.settings.video
          | video_tag:
            class: 'media-banner__video',
            autoplay: section.settings.video_autoplay,
            loop: section.settings.video_loop,
            controls: section.settings.video_show_controls,
            muted: section.settings.video_muted,
            playsinline: true
        }}
      {%- elsif section.settings.media_type == 'video' and section.settings.video_url != null -%}
        {%- if section.settings.video_url.type == 'youtube' -%}
          <iframe
            class="media-banner__video-iframe"
            src="https://www.youtube.com/embed/{{ video_id }}?autoplay={{ section.settings.video_autoplay | default: 1 }}&mute={{ section.settings.video_muted | default: 1 }}&loop={{ section.settings.video_loop | default: 1 }}&playlist={{ video_id }}&controls={{ section.settings.video_show_controls | default: 0 }}&showinfo=0&rel=0&modestbranding=1&playsinline=1"
            frameborder="0"
            allow="autoplay; encrypted-media"
            title="{{ section.settings.video_description | escape }}"
          ></iframe>
        {%- elsif section.settings.video_url.type == 'vimeo' -%}
          <iframe
            class="media-banner__video-iframe"
            src="https://player.vimeo.com/video/{{ video_id }}?autoplay={{ section.settings.video_autoplay | default: 1 }}&muted={{ section.settings.video_muted | default: 1 }}&loop={{ section.settings.video_loop | default: 1 }}&background=1&controls={{ section.settings.video_show_controls | default: 0 }}"
            frameborder="0"
            allow="autoplay; encrypted-media"
            title="{{ section.settings.video_description | escape }}"
          ></iframe>
        {%- endif -%}
      {%- else -%}
        {%- if section.settings.image != blank -%}
          {{
            section.settings.image
            | image_url: width: 1920
            | image_tag:
              class: 'media-banner__image',
              fetchpriority: fetch_priority,
              sizes: '100vw',
              widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
          }}
        {%- else -%}
          {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg media-banner__image' }}
        {%- endif -%}
      {%- endif -%}
    </div>

    <!-- Overlay -->
    <div class="media-banner__overlay"></div>

    <!-- Content -->
    <div class="media-banner__content">
      {%- for block in section.blocks -%}
        {% case block.type %}
          {%- when 'heading' -%}
            <h2
              class="inline-richtext {{ block.settings.heading_size }}"
              style="
                font-size: {{ block.settings.heading_font_size | default: 40 }}px;
                font-weight: {{ block.settings.heading_font_weight | default: 'bold' }};
                {% if block.settings.heading_font_family != blank %}font-family: {{ block.settings.heading_font_family }};{% endif %}
                {% if block.settings.heading_text_transform != blank %}text-transform: {{ block.settings.heading_text_transform }};{% endif %}
                {% if block.settings.heading_letter_spacing != blank %}letter-spacing: {{ block.settings.heading_letter_spacing }}px;{% endif %}
              "
              {{ block.shopify_attributes }}
            >
              {{ block.settings.heading }}
            </h2>
          {%- when 'caption' -%}
            <p
              class="{{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }}"
              style="
                font-size: {{ block.settings.caption_font_size | default: 18 }}px;
                font-weight: {{ block.settings.caption_font_weight | default: 'normal' }};
                {% if block.settings.caption_font_family != blank %}font-family: {{ block.settings.caption_font_family }};{% endif %}
                {% if block.settings.caption_text_transform != blank %}text-transform: {{ block.settings.caption_text_transform }};{% endif %}
                {% if block.settings.caption_letter_spacing != blank %}letter-spacing: {{ block.settings.caption_letter_spacing }}px;{% endif %}
              "
              {{ block.shopify_attributes }}
            >
              {{ block.settings.caption | escape }}
            </p>
          {%- when 'text' -%}
            <div
              class="rte {{ block.settings.text_style }}"
              style="
                font-size: {{ block.settings.text_font_size | default: 16 }}px;
                font-weight: {{ block.settings.text_font_weight | default: 'normal' }};
                {% if block.settings.text_font_family != blank %}font-family: {{ block.settings.text_font_family }};{% endif %}
                {% if block.settings.text_text_transform != blank %}text-transform: {{ block.settings.text_text_transform }};{% endif %}
                {% if block.settings.text_letter_spacing != blank %}letter-spacing: {{ block.settings.text_letter_spacing }}px;{% endif %}
              "
              {{ block.shopify_attributes }}
            >
              {{ block.settings.text }}
            </div>
          {%- when 'button' -%}
            {%- if block.settings.button_label != blank -%}
              <a
                {% if block.settings.button_link == blank %}
                  href="#" onclick="return false;"
                {% else %}
                  href="{{ block.settings.button_link }}"
                {% endif %}
                class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.button_label | escape }}
              </a>
            {%- endif -%}
          {%- when 'custom_button' -%}
            {%- if block.settings.button_label != blank -%}
              {%- liquid
                if block.settings.button_style == 'primary'
                  # Filled button
                  assign btn_text_color = section.settings.button_text_color | default: '#000000'
                  assign btn_bg_color = section.settings.button_background_color | default: '#ffffff'
                  assign btn_hover_text_color = section.settings.button_hover_text_color | default: '#ffffff'
                  assign btn_hover_bg_color = section.settings.button_hover_background_color | default: '#000000'
                else
                  # Outlined button
                  assign btn_text_color = section.settings.text_color | default: '#ffffff'
                  assign btn_bg_color = 'transparent'
                  assign btn_hover_text_color = section.settings.button_hover_text_color | default: '#000000'
                  assign btn_hover_bg_color = section.settings.button_background_color | default: '#ffffff'
                endif

                assign btn_border = section.settings.button_border_color | default: '#ffffff'
                assign btn_hover_border = section.settings.button_hover_border_color | default: '#ffffff'
              -%}
              {% render 'custom-button',
                url: block.settings.button_link,
                text: block.settings.button_label,
                style: block.settings.button_style,
                size: block.settings.button_size,
                text_color: btn_text_color,
                background_color: btn_bg_color,
                border_color: btn_border,
                hover_text_color: btn_hover_text_color,
                hover_background_color: btn_hover_bg_color,
                hover_border_color: btn_hover_border,
                font_size: block.settings.button_font_size,
                font_weight: block.settings.button_font_weight,
                font_family: block.settings.button_font_family,
                text_transform: block.settings.button_text_transform,
                letter_spacing: block.settings.button_letter_spacing
              %}
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

